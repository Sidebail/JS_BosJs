//File description - The nav bar at the top of the page that deals with authentication and logging in
nav.navbar.navbar-expand-lg.navbar-light
  a.navbar-brand(href='/') BosJS
  if !isAuthenticated
    span.text-center Login to see the leaderboards!
  button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarSupportedContent.collapse.navbar-collapse
    ul.navbar-nav.mr-auto
    ul.navbar-nav
      if isAuthenticated
        li.nav-item
          a.nav-link(href='/logout') Logout
        li.nav-item
          a.nav-link(href='/leaderboard') Leaderboard
      else
        li.nav-item
          a.btn.btn-github(href="/auth/github")
            i.fa.fa-github
            span.ml-2 Login With Github
        li.nav-item
          a.btn.btn-github(href="/auth/google")
            i.fa.fa-google
            span.ml-2 Login With Google 
        //li.nav-item
          a.btn.btn-github(href="/auth/twitter")
            i.fa.fa-twitter
            span.ml-2 Login With Twitter 
        li.nav-item
          a.btn.btn-github(href="/auth/facebook")
            i.fa.fa-facebook
            span.ml-2 Login With Facebook 
        li.nav-item
          a.btn.btn-github(href="/auth/vkontakte")
            i.fa.fa-vk
            span.ml-2 Login With Vkontakte 